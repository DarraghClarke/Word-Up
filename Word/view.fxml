<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="master-pane"
            stylesheets="@Stylesheet.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Word.Controller">
    <center>
        <TextArea fx:id="textArea" nodeOrientation="LEFT_TO_RIGHT" styleClass="editor" wrapText="true"></TextArea>
    </center>
    <top>
        <MenuBar prefHeight="30" prefWidth="800" stylesheets="@Stylesheet.css" BorderPane.alignment="CENTER">
            <Menu text ="Menu">
                <MenuItem fx:id="newFile" mnemonicParsing="false" onAction="#newFile" text="New" accelerator="Shortcut+N"></MenuItem>
                <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#openFile" text="Open" accelerator="Shortcut+O"></MenuItem>
                <MenuItem fx:id="save" onAction="#save" text="Save" accelerator="Shortcut+S"></MenuItem>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>